<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/spot_comments_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <!-- 名称 -->

    <TextView
        android:id="@+id/spot_comment_tourist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#4A4A4A" />
    <!-- 发布时间 -->

    <TextView
        android:id="@+id/spot_comment_tourist_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/spot_comments_layout"
        android:textColor="#4A4A4A" />
    <!-- 评论内容 -->

    <TextView
        android:id="@+id/spot_comment_tourist_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spot_comment_tourist_name"
        android:textColor="#4A4A4A" />

</RelativeLayout>