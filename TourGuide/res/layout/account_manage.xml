<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#F0F0F5"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/state_title"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:gravity="center"
        android:background="@drawable/spot_titlebg"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#C9C9C9"
        android:text="@string/account_title"
        android:textSize="20dp"
        android:textAppearance="?android:attr/textAppearanceLargeInverse"
        />
    <TableLayout 
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingTop="50dip"
	    android:paddingLeft="30dip">
        <TableRow>
              <TextView 
                android:layout_width="wrap_content"
                android:layout_height="40dip"
                android:gravity="center"
                android:textColor="#607B8B"
                android:textSize="12dp"
                android:text="手机号:"
                android:textAppearance="?android:attr/textAppearanceLargeInverse"/>
              <TextView 
                android:id="@+id/phone_number"
                android:layout_width="wrap_content"
                android:layout_height="40dip"
                android:gravity="center"
                android:textColor="#607B8B"
                android:textSize="12dp"
                android:paddingLeft="20dip"
                android:text="18702962637"
                android:textAppearance="?android:attr/textAppearanceLargeInverse"/>
        </TableRow>
         <TableRow>
              <TextView 
                android:layout_width="wrap_content"
                android:layout_height="40dip"
                android:gravity="center"
                android:textColor="#607B8B"
                android:textSize="12dp"
                android:text="用户名:"
                android:paddingLeft="4dip"
                android:textAppearance="?android:attr/textAppearanceLargeInverse"/>
              <TextView 
                android:id="@+id/nickname"
                android:layout_width="wrap_content"
                android:layout_height="40dip"
                android:gravity="center"
                android:textColor="#607B8B"
                android:textSize="12dp"
                android:paddingLeft="20dip"
                android:text="鱼水晴"
                android:textAppearance="?android:attr/textAppearanceLargeInverse"/>
        </TableRow>
          <TableRow>
              <TextView 
                android:layout_width="wrap_content"
                android:layout_height="40dip"
                android:gravity="center"
                android:textColor="#607B8B"
                android:textSize="12dp"
                android:text="密码:"
                android:paddingLeft="12dip"
                android:textAppearance="?android:attr/textAppearanceLargeInverse"/>
              <TextView 
                android:id="@+id/phone_number"
                android:layout_width="wrap_content"
                android:layout_height="40dip"
                android:gravity="center"
                android:textColor="#607B8B"
                android:paddingLeft="20dip"
                android:textSize="12dp"
                android:text="*******"
                android:textAppearance="?android:attr/textAppearanceLargeInverse"/>
             <Button
        		android:id="@+id/edit_password_btn"
        		android:layout_width="wrap_content"
        		android:layout_height="30dip"
        		android:layout_gravity="right"
        		android:layout_marginLeft="30dip"
        		android:text="修改密码"
        		android:textSize="8dip" />          
              </TableRow>  
    </TableLayout>
    <LinearLayout 
        android:id="@+id/edit_password_layout"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:visibility="invisible">
           <EditText
                android:layout_width="150dip"
        		android:layout_height="40dip"
        		android:layout_gravity="center"
        		android:gravity="left"
        		android:singleLine="true"
        	    android:layout_marginTop="50dip"
        	    android:paddingLeft="10dip"
        	    android:paddingTop="10dip"
        		android:scrollHorizontally="true" 
        		android:textColor="#aaaaaa"
        		android:password="true"
	            android:textSize="12dip"
       	 		android:id="@+id/password1"
       	 		android:hint="@string/passwd1" > 
             </EditText>
             <EditText
                android:layout_width="150dip"
        		android:layout_height="40dip"
        		android:gravity="left"
        		android:layout_gravity="center"
        		android:layout_marginTop="10dip"
        		android:paddingLeft="10dip"
        		android:paddingTop="10dip"
        		android:scrollHorizontally="true" 
        		android:password="true"
        		android:textColor="#aaaaaa"
	            android:textSize="12dip"
       	 		android:id="@+id/password2" 
       	 		android:hint="@string/passwd2"> 
             </EditText>
             <Button
        		android:id="@+id/edit_password_btn"
        		android:layout_width="150dip"
        		android:layout_height="30dip"
        		android:layout_marginTop="10dip"
        		android:layout_gravity="center"
        		android:text="保存修改"
        		android:textSize="8dip" />                
    </LinearLayout>
</LinearLayout>